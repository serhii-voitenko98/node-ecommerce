extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")
block content
    div
        a(href="/admin/add-product") Add Product
    main
        .grid
            if prods.length
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="" + product.imageUrl, alt="A Book")
                        .card__content
                            h2.product__price #{product.price}
                            p.product__description #{product.description}
                        .card__actions(style="display: flex;")
                            a.btn(href="/admin/edit-product/" + product.id) Edit Product
                            form(action="/admin/remove-product", method="POST")
                                input(hidden="hidden", value="" + product.id, name="id")
                                button.btn(type="submit") Remove
            else
                h1 No Products
