extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        .grid
            if orders.length
                each order in orders
                    article.card.product-item
                        header.card__header
                            h1.product__title #{order.cartItem.title}
                        .card__image
                            img(src="" + order.cartItem.imageUrl, alt="A Book")
                        .card__content
                            h2.product__price #{order.cartItem.price}$
                            p.product__description #{order.cartItem.description}
            else
                h1 No Products
